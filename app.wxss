.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}



.userinfo {
  display: flex;
  flex-direction:column;
  align-items: left;
  width: 100%;
}
.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  background-size: cover;
}
.userinfo-nickname {
  color: #aaa;
  font-size: 30rpx;
  margin-left: 40rpx;
}

.usermotto {
  margin: 30px;
}

.swiperbanner{
    width:100%;
    text-align: center;
    margin-top: 10px;
    
}

.imagebanner{
    width:96%;
    height:7.25rem;
    background: #f5f5f5;
    text-align: center;
}


